input_string = input('Введите число словами: ')
  
def transform_string_to_integer(input_string):
  number_word_dict = {
    "ты": 1000, "м": 1000000,
    "сто": 100, "двес": 200, "трис": 300, "четырес": 400, "пятьс": 500, "шестьс": 600, "семьс": 700, "восемьс": 800, "девятьс": 900,
    "одинн": 11, "двен": 12, "трин": 13, "четырн": 14, "пятн": 15, "шестн": 16, "семн": 17, "восемн": 18, "девятн": 19,
    "двад": 20, "трид": 30, "сор": 40, "пятьд": 50, "шестьд": 60, "семьд": 70, "восемьд": 80, "девяно": 90,
    "деc": 10, "н": 0, "о": 1, "дв": 2, "т": 3, "ч": 4, "п": 5, "ш": 6, "с": 7, "в": 8, "д": 9, }
# разбиваю входящую строку на отдельные слова и ввожу новую переменную result, в которую буду складывать итоговое число
  string = input_string.split()
  result = 0
# разбиваю словарь на два списка, чтобы можно было обращаться по индексу к ключу и значению
  number_word_keys =list(number_word_dict.keys())
  number_word_values = list(number_word_dict.values())
# перебираю отдельные слова во введённой строке
  for s in string:
# внутри перебираю список из ключей, проверяя наличие начала каждого отдельного слова в списке из ключей
    for i in range(len(number_word_keys)):
      if s.startswith(number_word_keys[i]):
# дополнительно проверяю, является ли текущее слово тысячным или милионным (ниже) множителемю если да, то умножаю результат на 1000 или 1000000 соответственно
        if s.startswith('ты') and result != 0:
          result *= 1000
# как только в процессе перебора слово найдено, прерываю цикл, чтобы не довносить лишние значения
          break
# так как перед словом тысяча или миллион допускается не писать "одна(-ин)", проверяю такой вариант
        elif s.startswith('ты') and result == 0:
          result = 1000
          break
        elif s.startswith('м') and result != 0:
          result *= 1000000
          break
        elif s.startswith('м') and result == 0:
          result = 1000000
          break
# если же текущее слово не является множителем, то складирую его в переменную result
        else:
          result += number_word_values[i]
          break
  return result
# запускаю функцию для тестирования
transform_string_to_integer(input_string)
